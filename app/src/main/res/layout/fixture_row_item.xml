<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/post_row_item_margin_bottom"
    android:layout_marginTop="@dimen/post_row_item_margin_top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fixture_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/date_size" />

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5"
            android:ellipsize="end"
            android:hint="home"
            android:maxEms="30"
            android:maxLines="2" />

        <TextView
            android:id="@+id/drawTextView"
            android:layout_marginLeft="@dimen/margin_draw"
            android:layout_marginRight="@dimen/margin_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="X"/>

        <TextView
            android:id="@+id/awayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:ellipsize="end"
            android:hint="away"
            android:maxEms="30"
            android:maxLines="2" />
    </LinearLayout>
</LinearLayout>