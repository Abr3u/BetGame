<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.abreu.betgame">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.abreu.betgame.ui.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.abreu.betgame.ui.activities.CompetitionsActivity"
            android:label="@string/competitions_activity">
        </activity>
        <activity
            android:name="com.abreu.betgame.ui.activities.CompetitionFixturesActivity"
            android:label="@string/competitions_fixtures_activity">
        </activity>
    </application>

</manifest>
